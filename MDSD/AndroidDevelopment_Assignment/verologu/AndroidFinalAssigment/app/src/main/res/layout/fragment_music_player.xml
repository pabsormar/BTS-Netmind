<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_music_player"
    tools:context=".MusicPlayer"
    android:orientation="vertical"
    android:id="@+id/fragment_music_player_container_sv">

    <LinearLayout android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/fragment_music_player_container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_music_player_title_tv"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="hey"/>

            <TextView android:id="@+id/fragment_music_player_song_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:text="hey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:id="@+id/fragment_music_player_country_tv"/>

            <TextView android:id="@+id/fragment_music_player_song_country_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="hey"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/music_player_border">

            <ImageView
                android:id="@+id/content_music_player_previous_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_previous_white_48dp"/>

            <ImageView
                android:id="@+id/content_music_player_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_circle_filled_white_48dp"/>

            <ImageView
                android:id="@+id/content_music_player_pause_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause_circle_filled_white_48dp"/>

            <ImageView
                android:id="@+id/content_music_player_next_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_skip_next_white_48dp"/>

        </LinearLayout>

        <!-- TODO: progtessbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_music_player_details_tv"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView android:id="@+id/fragment_music_player_song_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="italic"
                tools:text="hey"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
